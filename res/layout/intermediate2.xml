<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">

  	<ImageView 
		android:id="@+id/Logo" 
		android:scaleType="fitXY"
		android:layout_width="fill_parent" 
		android:src="@drawable/logo"
		android:layout_height="40dip">
	</ImageView>

	<TextView android:id="@+id/Intermediate2Text"
		android:text="Pulling up locations..."
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"/>
		
	<ImageView 
		android:src="@color/beige"
		android:layout_width="fill_parent" 
		android:layout_height="40dip"/>
		
	<Spinner android:id="@+id/Intermediate2Spinner" 
		android:layout_width="fill_parent" 
		android:layout_height="60dip"
		android:layout_centerVertical="true" 
		android:layout_centerHorizontal="true"/>
		
	<ImageView 
		android:src="@color/beige"
		android:layout_width="fill_parent" 
		android:layout_height="40dip"/>
		
	<Button android:id="@+id/Intermediate2Button"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		android:text="Continue"
		android:onClick="proceed"
		android:layout_gravity="bottom"
		android:layout_centerHorizontal="true"/>
		
  	<ImageView 
		android:id="@+id/yelp"
		android:layout_width="wrap_content"
		android:src="@drawable/poweredbyyelp"
		android:layout_height="40dip" android:layout_gravity="center_horizontal|bottom"
		android:onClick = "toYelp">
	</ImageView>
  
</LinearLayout>
